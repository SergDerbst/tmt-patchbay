{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/_tests/**"]
}
